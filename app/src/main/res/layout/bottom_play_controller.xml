<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_parent_bottom_player"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:visibility="gone">

    <ProgressBar
        android:id="@+id/pb_bottom_player"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:progress="20"
        android:progressBackgroundTint="@color/gray_bababa"
        android:progressTint="@color/black" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/main_color">

        <ImageView
            android:id="@+id/iv_album_bottom_player"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="17dp"
            android:background="@drawable/corner_radius_8"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_title_bottom_player"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/suitregular"
            android:text="음원 제목"
            android:textColor="@color/white"
            android:textSize="12dp"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:singleLine="true"
            app:layout_constraintLeft_toRightOf="@+id/iv_album_bottom_player"
            app:layout_constraintTop_toTopOf="@+id/iv_album_bottom_player"
            app:layout_constraintRight_toLeftOf="@+id/ib_play_bottom_player"/>

        <TextView
            android:id="@+id/tv_artist_bottom_player"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="3dp"
            android:fontFamily="@font/suitregular"
            android:text="아티스트"
            android:textColor="@color/white"
            android:textSize="10dp"
            app:layout_constraintLeft_toRightOf="@+id/iv_album_bottom_player"
            app:layout_constraintTop_toBottomOf="@+id/tv_title_bottom_player" />

        <ImageButton
            android:id="@+id/ib_close_bottom_player"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/ic_main_play_close"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/ib_play_bottom_player"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginRight="7dp"
            android:background="@color/transparent"
            android:src="@drawable/ic_main_play_play"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/ib_close_bottom_player"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>