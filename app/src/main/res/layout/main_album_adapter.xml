<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shadow_main_album"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:id="@+id/album_card"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/corner_main_album"
            android:scaleType="fitXY"
            android:src="@drawable/album_img"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <ImageView
            android:id="@+id/album_blur"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/corner_main_album"
            android:scaleType="fitXY"
            android:src="@drawable/main_card_blur"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/album_img"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="17dp"
            android:layout_marginBottom="24dp"
            android:src="@drawable/album_cover"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent" />

        <TextView
            android:id="@+id/album_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="8dp"
            android:fontFamily="@font/suitbold"
            android:text="앨범 텍스트"
            android:textColor="@color/white"
            android:textSize="14dp"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:singleLine="true"
            app:layout_constraintRight_toLeftOf="@+id/playBtn"
            app:layout_constraintLeft_toRightOf="@+id/album_img"
            app:layout_constraintTop_toTopOf="@+id/album_img" />

        <TextView
            android:id="@+id/album_singer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/suitbold"
            android:text="아티스트"
            android:textColor="@color/white"
            android:textSize="15dp"
            app:layout_constraintLeft_toRightOf="@+id/album_img"
            app:layout_constraintTop_toBottomOf="@+id/album_title" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_constraintLeft_toRightOf="@+id/album_img"
            app:layout_constraintTop_toBottomOf="@+id/album_singer">

            <ImageView
                android:id="@+id/icon1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/suitregular"
                android:src="@drawable/ic_main_music" />

            <TextView
                android:id="@+id/album_music"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:fontFamily="@font/suitbold"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="15dp" />

            <ImageView
                android:id="@+id/icon2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:fontFamily="@font/suitregular"
                android:src="@drawable/ic_main_movie" />

            <TextView
                android:id="@+id/album_movie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:fontFamily="@font/suitbold"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="15dp" />

            <ImageView
                android:id="@+id/icon3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:fontFamily="@font/suitregular"
                android:src="@drawable/ic_main_camera" />

            <TextView
                android:id="@+id/album_camera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:fontFamily="@font/suitbold"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="15dp" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/playBtn"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="28dp"
            android:background="@color/transparent"
            android:src="@drawable/ic_main_play"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/album_img" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_no_registed"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/corner_main_album_shadow"
            android:visibility="gone"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tv_display"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/suitbold"
                android:text="@string/reg_text1"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:layout_marginBottom="42dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/btn_regist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/corner_regist_button"
                android:fontFamily="@font/suitbold"
                android:paddingHorizontal="30dp"
                android:text="@string/reg_btn"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:textAllCaps="false"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_display" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>
